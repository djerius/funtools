#!/bin/sh
# set -x

ARGS=$*

echo "************** Executing tfundisp with regions **************"
echo " "
./tfundisp $ARGS < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tfundisp with boxes, ellipses  **************"
echo " "
./tfundisp $ARGS < @abs_top_srcdir@/funtest/tboxell.in

echo "************** Executing tfundisp with columns **************"
echo " "
./tfundisp $ARGS < @abs_top_srcdir@/funtest/tcols.in

echo "************** Executing tfunhead **************"
echo " "
./tfunhead $ARGS < @abs_top_srcdir@/funtest/thead.in

echo "************** Executing tfuncalc **************"
echo " "
./tfuncalc < @abs_top_srcdir@/funtest/tcalc.in

echo "************** Executing tfunmerge **************"
echo " "
@abs_top_srcdir@/tfunmerge < @abs_top_srcdir@/funtest/tmerge.in

echo "************** Executing tfuncone **************"
echo " "
@abs_top_srcdir@/tfuncone < @abs_top_srcdir@/funtest/tcone.in

echo "************** Executing tfuncnts **************"
echo " "
./tfuncnts $ARGS < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tfuncnts with filter **************"
echo " "
./tfuncnts $ARGS -b "pha=5:7&&pi=6:8" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tfuncnts with boxes, ellipses  **************"
echo " "
./tfuncnts $ARGS < @abs_top_srcdir@/funtest/tboxell.in

echo "************** Executing tfundisp with paren checks **************"
echo " "
./tfundisp $ARGS < @abs_top_srcdir@/funtest/tparen.in

echo "************** Executing tfundisp with filter **************"
echo " "
./tfundisp $ARGS -b "pha=5:7&&pi=6:8&&" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tfundisp w/include file **************"
echo " "
./tfundisp -i -b "pha=5:7&&pi=6:8&&" $ARGS < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing timev [*,*,2] **************"
echo " "

./timev $ARGS -b "[*,*,2]" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing timev [*,*,3] **************"
echo " "
./timev $ARGS -b "[*,*,3]" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing timev [404:603,412:611] **************"
echo " "
./timev $ARGS -b "[404:603,412:611]" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing timev [404:603,412:611,2] **************"
echo " "
./timev $ARGS -b "[404:603,412:611,2]" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing timev [404:603,412:611,3] **************"
echo " "
./timev $ARGS -b "[404:603,412:611,3]" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tfuncnts, blocked w/phys. coords **********"
echo " "
./tfuncnts -f1 @abs_top_srcdir@/funtest/data/snr2.fits -c physical $ARGS < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tfuncnts on files **************"
echo " "
./tfuncnts $ARGS < tfile.in

echo "************** Executing tfundisp on files **************"
echo " "
./tfundisp $ARGS < tfile.in

echo "************** Executing tfundisp w/include file **************"
echo " "
./tfundisp -i -b "pha=5:7&&pi=6:8&&" $ARGS < @abs_top_srcdir@/funtest/tfile.in

echo "************** Executing tfundisp with filter2 **************"
echo " "
./tfundisp $ARGS -b "(pha=5:7||pi=6:8)&&" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tfundisp with filter3 **************"
echo " "
./tfundisp $ARGS -b "(pha=5:7,pi=6:8)&&" < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tevread with regions **************"
echo " "
./tevread $ARGS < @abs_top_srcdir@/funtest/tregions.in

echo "************** Executing tevread with column filters **************"
echo " "
./tevread $ARGS < @abs_top_srcdir@/funtest/tcols.in

echo "************** Executing tfunview **************"
echo " "
./tfunview $ARGS < tview.in

echo "************** Executing tfunview with alt view db **************"
echo " "
./tfunview -f @abs_top_srcdir@/funtest/funtools2.vu $ARGS < tview.in
